<div id="modify-effect-modal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <h3>Modify Effect</h3>
    <form id="modify-effect-form">
      {{! <label for="effect-outer-strength">Outer Strength:</label> }}
      {{! <input type="number" id="effect-outer-strength" name="outerStrength" min="0" step="1"> }}
      {{! <label for="effect-color">Color:</label> }}
      {{! <input type="color" id="effect-color" name="color"> }}
      <!-- Add more fields as needed -->
      <button type="button" id="save-effect-changes">Save Changes</button>
    </form>
  </div>
</div>
