<div class="tab-content" data-tab="effects">
    <h3>Current Effects</h3>
    <div id="current-effects-container"></div>

    <h3>Select Target</h3>
    <select id="target-dropdown">
        <option value="tile">Tile</option>
        <option value="image">Image</option>
    </select>

    <div id="tile-selection">
        <h3>Select Tile</h3>
        <select id="tile-dropdown"></select>
    </div>

    <div id="image-selection" style="display: none;">
        <h3>Select Image</h3>
        <select id="image-dropdown"></select>
    </div>

    <h3>Add Effect</h3>
    <select id="effect-dropdown"></select>
    <button id="add-effect-button">Add Effect</button>

    <h3>Remove Effect</h3>
    <button id="remove-effect-button">Remove Effect</button>

    <h3>Modify Effect</h3>
    <div id="effect-parameters"></div>
    <button id="update-effect-button">Update Effect</button>
</div>


