<div class="form-group" style="margin-top: 10px; display: flex;">
  <label for="tile-count"># of Tiles:</label>
  <input type="number" id="tile-count" style="margin-left: 10px;" name="tile-count" min="0" value="1">
  <button type="button" id="generate-tiles" style="margin-left: 10px;"><i class="fa fa-plus"></i></button>
</div>

<div class="form-group" style="margin-top: 10px; display: flex; align-items: center;">
  <label for="replace-tiles" style="margin-right: 10px;">Replace existing tiles:</label>
  <input type="checkbox" id="replace-tiles" name="replace-tiles">
</div>

<div id="tile-fields-container">
  {{#each tiles as |tile index|}}
  <div class="tile-field" data-order="{{tile.order}}" style="display: flex; align-items: center; margin-bottom: 10px;">
      <span class="handle" style="cursor: move; margin-right: 5px;">&#9776;</span>
      <input type="text" name="tile-name-{{tile.order}}" placeholder="Tile Name" value="{{tile.name}}" style="margin-right: 10px;">
      <input type="range" name="tile-opacity-{{tile.order}}" min="0.01" max="1" step="0.01" value="{{tile.opacity}}" style="margin-right: 10px;">
      <input type="color" name="tile-tint-{{tile.order}}" value="{{tile.tint}}" style="margin-right: 10px;">
      <button type="button" class="delete-tile" data-order="{{tile.order}}"><i class="fas fa-trash"></i></button>
    </div>
  {{/each}}
</div>


<div class="form-group" style="margin-top: 10px;">
  <button type="button" id="save-tiles" >Save Tiles</button>
</div>
