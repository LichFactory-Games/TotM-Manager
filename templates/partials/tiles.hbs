<div class="form-group" style="margin-top: 10px; display: flex;">
  <label for="tile-count"># of Tiles:</label>
  <input type="number" id="tile-count" name="tile-count" min="1" value="1">
  <button type="button" id="generate-tiles" style="margin-left: 10px;">Add Tiles</button>
</div>

<div class="form-group" style="margin-top: 10px; display: flex; align-items: center;">
  <label for="replace-tiles" style="margin-right: 10px;">Replace existing tiles:</label>
  <input type="checkbox" id="replace-tiles" name="replace-tiles">
</div>

<div id="tile-fields-container">
  {{#each tiles as |tile index|}}
  <div class="tile-field" data-index="{{index}}" style="display: flex; align-items: center; margin-bottom: 10px;">
      <span class="handle" style="cursor: move; margin-right: 5px;">&#9776;</span>
      <input type="text" name="tile-name-{{index}}" placeholder="Tile Name" value="{{tile.name}}" style="margin-right: 10px;">
      <input type="range" name="tile-opacity-{{index}}" min="0" max="1" step="0.01" value="{{tile.opacity}}" style="margin-right: 10px;">
      <input type="color" name="tile-tint-{{index}}" value="{{tile.tint}}" style="margin-right: 10px;">
            <button type="button" class="delete-tile" data-index="{{index}}"><i class="fas fa-trash"></i></button>
    </div>
  {{/each}}
</div>

<div class="form-group" style="margin-top: 10px;">
  <button type="button" id="save-tiles" style="margin-left: 10px;">Save Tiles</button>
</div>


